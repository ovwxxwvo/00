    <j>left</j>
    <k>up</k>
    <l>down</l>
    <semicolon>right</semicolon>
    <i>pageup</i>
    <o>pagedown</o>
    <comma>skipprevious</comma>
    <period>skipnext</period>
    <h>back</h>
    <m>menu</m>
    <u>previousmenu</u>
    <n>activatewindow(settings)</n>
    <y>activatewindow(shutdownmenu)</y>
    <q>quit</q>
    <f>runaddon(script.globalsearch)</f>
