# win move  in tab
  bind -n   C-S-Left      swapp -U
  bind -n   C-S-Right     swapp -D
  bind -n   C-S-Up        swapp -U
  bind -n   C-S-Down      swapp -D
# win resize
  bind -n   C-Up          resizep -U 2
  bind -n   C-Down        resizep -D 2
  bind -n   C-Left        resizep -L 2
  bind -n   C-Right       resizep -R 2


